<h1>List of Trips</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <% if user_signed_in? && current_user == trip.user %>
      <th></th>
      <th></th>
    <% end -%>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.name %></td>
    <td><%= trip.description %></td>
    <td><%= link_to 'Show', trip %></td>
    <% if user_signed_in? && current_user == trip.user %>
      <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
      <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end -%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trip', new_trip_path, :class => 'btn btn-primary' %>
